<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lost & Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen text-gray-800">

    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-3xl font-bold text-center text-blue-700 mb-6">Lost & Found Portal</h1>


        <div class="bg-white rounded-2xl p-6 shadow-md mb-10">
            <h2 class="text-2xl font-semibold mb-4">Report a Lost Item</h2>
            <form id="lostForm" class="space-y-4">
                <input type="text" id="itemName" placeholder="Item name" class="w-full px-4 py-2 border rounded-md" required />
                <input type="text" id="location" placeholder="Last seen location" class="w-full px-4 py-2 border rounded-md" required />
                <textarea id="description" placeholder="Item description" class="w-full px-4 py-2 border rounded-md" rows="3" required></textarea>
                <input type="file" id="imageUpload" accept="image/*" class="w-full px-4 py-2 border rounded-md" />
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Submit</button>
            </form>
        </div>


        <div class="bg-white rounded-2xl p-6 shadow-md">
            <h2 class="text-2xl font-semibold mb-4">Found Items</h2>
            <div id="itemsList" class="grid gap-4 sm:grid-cols-2"></div>
        </div>
    </div>

    <script>
        const form = document.getElementById("lostForm");
        const itemsList = document.getElementById("itemsList");

        form.addEventListener("submit", function(e) {
                    e.preventDefault();

                    const name = document.getElementById("itemName").value;
                    const location = document.getElementById("location").value;
                    const description = document.getElementById("description").value;
                    const imageInput = document.getElementById("imageUpload");
                    const imageURL = imageInput.files[0] ? URL.createObjectURL(imageInput.files[0]) : null;

                    const itemHTML = `
        <div class="border rounded-lg p-4 shadow-md bg-gray-50">
          <h3 class="text-lg font-bold">${name}</h3>
          <p class="text-sm text-gray-600 mb-2">Last seen at: ${location}</p>
          <p class="mb-2">${description}</p>
          ${imageURL ? `<img src="${imageURL}" alt="${name}" class="w-full h-40 object-cover rounded-md">` : ''}
        </div>
      `;

      itemsList.insertAdjacentHTML("afterbegin", itemHTML);
      form.reset();
    });
    </script>

</body>

</html>
